<Project>
  <PropertyGroup>
    <Copyright>Copyright Â© Anthony Simmon $([System.DateTime]::UtcNow.ToString(yyyy))</Copyright>
    <Authors>Anthony Simmon</Authors>
    <Owners>Anthony Simmon</Owners>
    <PackageProjectUrl>https://github.com/asimmon/ephemeral-mongo</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <LangVersion>12</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageTags>MongoDB;Mongo;test;testing;unittest;integrationtest</PackageTags>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <RestoreLockedMode Condition="'$(ContinuousIntegrationBuild)' == 'true'">true</RestoreLockedMode>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Workleap.DotNet.CodingStandards">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
